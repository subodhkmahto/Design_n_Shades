<form action="/user/password-reset" method="POST">
    <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required>
      
        <div id="password_compare" style="display: none;">
            <label for="password1">Password</label>
            <input type="password" id="password1" name="password1" class="form-control" placeholder="Enter your password" required>
    
            <label for="password2">Confirm Password</label>
            <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm your password" required>
        </div>
    </div>

    <button type="submit" class="btn btn-primary" id="reset_button_id">Send Reset Link</button>

    <button type="submit" class="btn btn-primary" id="sumbit_button_id">submit</button>

    
</form>

<p class="mt-3"><a href="/user/login_you">Back to Login</a></p>

<script>
    document.getElementById('reset_button_id').addEventListener('click', function(event) {
        const emailValue = document.getElementById('email').value;
        
        if (emailValue) {
            document.getElementById('password_compare').style.display = 'block';
            document.getElementById('reset_button_id').style.display = 'none';

        }
    });input

    document.getElementById('sumbit_button_id').addEventListener('', function() {
        const password1 = document.getElementById('password1').value;
        const password2 = document.getElementById('password2').value;

        if (password1 !== password2) {
            alert('Passwords do not match!');
        }
    });
</script>
